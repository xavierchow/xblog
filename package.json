    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.2",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5",
    "typescript-eslint": "^8.18.2"
