{
  "name": "xblog",
  "version": "1.2.6",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run copyTrigger && next build",
    "start": "next start",
    "watch": "npm run copyTrigger && WATCH_MARKDOWN=yes npm run dev",
    "lint": "next lint",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "format": "prettier --write \"app/**/*.ts\" \"app/**/*.tsx\"",
    "test": "jest",
    "prepare": "husky",
    "copyTrigger": "cp ./app/lib/refresh-beacon.template.ts ./app/lib/refresh-beacon.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next/third-parties": "^15.1.4",
    "@nextui-org/avatar": "^2.2.6",
    "@nextui-org/button": "^2.2.8",
    "@nextui-org/system": "^2.4.5",
    "@nextui-org/theme": "^2.4.4",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.15.0",
    "gray-matter": "^4.0.3",
    "next": "15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "sharp": "^0.33.5"
